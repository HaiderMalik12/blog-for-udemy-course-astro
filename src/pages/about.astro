---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const pageTitle = "About Me";
const project = {
  id: 1,
  name: "Astro",
  technologies: ["Node.js", "Astro", "React"],
};
const skills = ["node", "css", "graphql", "html"];
const happy = true;
const finished = false;
const flag = true;

const skillColor = "green";
---

<head>
  <title>{pageTitle}</title>
  <style define:vars={{ skillColor }}>
    h1 {
      color: grey;
      font-size: 1rem;
    }
    .skill {
      color: var(--skillColor);
      font-weight: bold;
    }
  </style>
</head>
<body>
  <Header />
  <h1>My Site</h1>
  <h1>{pageTitle}</h1>
  <p>I am a fullstack web developer</p>
  <p>I teach developers how to build fullstack web appplications</p>
  <p>{project.name}</p>
  {
    project.technologies.length && (
      <p>Total Techonologies Used: {project.technologies.length}</p>
    )
  }
  {skills.map((skill) => <li class="skill">{skill}</li>)}
  <!-- Conditional Rendering -->
  {flag && <p>I have completed my Astro project</p>}
  <Footer />
  <script>
    import "../scripts/menu.js";
  </script>
</body>
