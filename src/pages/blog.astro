---
import BlogPost from "../components/BlogPost.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
---

<body>
  <Header />

  <h1>My Blog</h1>
  <p>I share my experiences and learning journey</p>
  <ul>
    <!-- I would like to render all of the post links from the /pages/posts folder -->
    <!-- Use map operation and create links for the posts -->
    {allPosts.map((post) => <BlogPost post={post} />)}
  </ul>
  <Footer />
  <script>
    import "../scripts/menu.js";
  </script>
</body>
